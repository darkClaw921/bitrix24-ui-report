# Development Environment Configuration
# Copy this file to .env.development and customize for development

# Application Settings
DEBUG=true
LOG_LEVEL=DEBUG

# Database (Development)
DATABASE_URL=sqlite:///./dev_chatbot.db

# API Keys (Development - Use test/development keys)
OPENAI_API_KEY=your_development_openai_api_key_here
GROK_API_KEY=your_development_grok_api_key_here
ANTHROPIC_API_KEY=your_development_anthropic_api_key_here

# CORS Settings (Development - Allow local development servers)
# CORS_ORIGINS will use default values from settings.py for development

# Rate Limiting (Development - More permissive)
RATE_LIMIT_PER_MINUTE=120

# Chart Settings (Development)
MAX_CHART_DATA_POINTS=500
DEFAULT_CHART_TYPE=line

# WebSocket Settings (Development)
WEBSOCKET_TIMEOUT=600

# Development-specific settings
ENABLE_AUTO_RELOAD=true
ENABLE_DETAILED_LOGGING=true