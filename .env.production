# Production Environment Configuration
# Copy this file to .env.production and customize for production deployment

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Database (Production)
DATABASE_URL=sqlite:///./prod_chatbot.db

# API Keys (Production - Use production API keys)
OPENAI_API_KEY=your_production_openai_api_key_here
GROK_API_KEY=your_production_grok_api_key_here
ANTHROPIC_API_KEY=your_production_anthropic_api_key_here

# CORS Settings (Production - Restrict to your domain)
# CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Rate Limiting (Production - More restrictive)
RATE_LIMIT_PER_MINUTE=60

# Chart Settings (Production)
MAX_CHART_DATA_POINTS=1000
DEFAULT_CHART_TYPE=line

# WebSocket Settings (Production)
WEBSOCKET_TIMEOUT=300

# Production-specific settings
ENABLE_METRICS=true
ENABLE_MONITORING=true
DEPLOYMENT_TIME=set_during_deployment